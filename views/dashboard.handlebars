

<div class="my-2">
  <section class="d-flex flex-column align-items-center">
    <div class="col-12 col-md-8 col-lg-6">
      <div class="d-flex flex-row mb-4">
        <h2 class="d-flex align-items-center mb-0 mr-2"><span>Dashboard</span></h2>
        <a class="btn p-1 " href="/posts">Create Post</a>
      </div>
      {{#if posts.length}}
      <div class="">
        <h2 class="">Your Posts</h2>
        <ul>
          {{#each posts as |post|}}
          <li>
            {{> postPartial post}}
          </li>
          {{/each}}
        </ul>
      </div>
      {{/if}}
    </div>
  </section>
</div>

{{#unless loggedIn}}
<script src="/js/loginReq.js"></script>
{{/unless}}