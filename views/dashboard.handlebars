

<div>
  <section class="d-flex flex-column align-items-center">
    <div class="col-12 col-md-8 col-lg-6">
      <h2 class="">Dashboard</h2>
      <a class="btn my-2" href="/posts">Create a New Post</a>
      {{#if posts.length}}
      <div class="">
        <h3>Your Posts</h3>
        <ul>
          {{#each posts as |post|}}
          <li>
            {{> postPartial post}}
          </li>
          {{/each}}
        </ul>
      </div>
      {{/if}}
    </div>
  </section>
</div>

{{#unless loggedIn}}
<script src="/js/loginReq.js"></script>
{{/unless}}